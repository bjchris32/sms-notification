<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% if user_signed_in? %>
  <p>Welcome, <%= current_user.email %>!</p>
  <p>Thanks for joining to be one of the <%= @user_count %> users on this site</p>
  <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
<% else %>
  <p>Be one of the <%= @user_count %> users on this site</p>
  <%= turbo_frame_tag "signin_turbo_frame" do %>
    <%= link_to "Sign in", new_user_session_path %>
  <% end %>
<% end %>
